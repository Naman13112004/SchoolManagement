@model SchoolManagement.Models.Attendance

@{
    ViewData["Title"] = "Record New Attendance";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-info text-white">
                <h3 class="text-center my-4">Record Daily Attendance 📝</h3>
            </div>
            <div class="card-body">
                <h4 class="mb-3">Attendance Details</h4>
                <hr />
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Date" class="form-label fw-bold"></label>
                        <input asp-for="Date" class="form-control form-control-lg" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="Date" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ClassRoomId" class="form-label fw-bold">Select Class</label>
                        <select asp-for="ClassRoomId" class="form-select form-select-lg" asp-items="ViewBag.ClassRoomId">
                            <option value="">-- Choose Class --</option>
                        </select>
                        <span asp-validation-for="ClassRoomId" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="StudentId" class="form-label fw-bold">Select Student</label>
                        <select asp-for="StudentId" class="form-select form-select-lg" asp-items="ViewBag.StudentId">
                            <option value="">-- Choose Student --</option>
                        </select>
                        <span asp-validation-for="StudentId" class="text-danger small"></span>
                    </div>

                    <div class="form-check form-switch mb-4 p-3 border rounded bg-light">
                        <input class="form-check-input" type="checkbox" role="switch" id="IsPresentSwitch" asp-for="IsPresent">
                        <label class="form-check-label fw-bold" for="IsPresentSwitch">
                            @Html.DisplayNameFor(model => model.IsPresent) (Check if **Present**)
                        </label>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-info btn-lg text-white">
                            <i class="fas fa-calendar-check me-2"></i> Save Attendance
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="text-info fw-bold">← Back to Attendance Log</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}