@model SchoolManagement.Models.Attendance

@{
    ViewData["Title"] = "Attendance Details";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-info text-white">
                <h3 class="text-center my-4">Attendance Record Details ℹ️</h3>
            </div>
            <div class="card-body p-4">
                <h4 class="mb-3 border-bottom pb-2">Record for @Html.DisplayFor(model => model.Student.FullName)</h4>

                <dl class="row mb-4">
                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.Student)
                    </dt>
                    <dd class="col-sm-8 fw-bold">
                        @Html.DisplayFor(model => model.Student.FullName)
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.ClassRoom)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ClassRoom.Name)
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.Date)</span>
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        Attendance Status
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.IsPresent)
                        {
                        <span class="badge bg-success fs-6"><i class="fas fa-check-circle me-1"></i> Present</span>
                        }
                        else
                        {
                        <span class="badge bg-danger fs-6"><i class="fas fa-times-circle me-1"></i> Absent</span>
                        }
                    </dd>
                </dl>

                <hr />

                <div class="d-flex justify-content-start gap-2 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i> Edit Record
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to Log
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>