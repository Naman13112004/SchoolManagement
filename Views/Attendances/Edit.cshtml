@model SchoolManagement.Models.Attendance

@{
    ViewData["Title"] = "Edit Attendance";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-warning text-dark">
                <h3 class="text-center my-4">Edit Attendance Record ✏️</h3>
            </div>
            <div class="card-body">
                <h4 class="mb-3">Update Record for @Html.DisplayFor(model => model.Student.FullName)</h4>
                <hr />
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Date" class="form-label fw-bold"></label>
                        <input asp-for="Date" class="form-control form-control-lg" type="date" />
                        <span asp-validation-for="Date" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ClassRoomId" class="form-label fw-bold">Class</label>
                        <select asp-for="ClassRoomId" class="form-select form-select-lg" asp-items="ViewBag.ClassRoomId"></select>
                        <span asp-validation-for="ClassRoomId" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="StudentId" class="form-label fw-bold">Student</label>
                        <select asp-for="StudentId" class="form-select form-select-lg" asp-items="ViewBag.StudentId"></select>
                        <span asp-validation-for="StudentId" class="text-danger small"></span>
                    </div>

                    <div class="form-check form-switch mb-4 p-3 border rounded bg-light">
                        <input class="form-check-input" type="checkbox" role="switch" id="IsPresentSwitch" asp-for="IsPresent">
                        <label class="form-check-label fw-bold" for="IsPresentSwitch">
                            @Html.DisplayNameFor(model => model.IsPresent) (Check if **Present**)
                        </label>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" value="Save" class="btn btn-warning btn-lg text-dark">
                            <i class="fas fa-edit me-2"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="text-warning fw-bold">← Back to Attendance Log</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}