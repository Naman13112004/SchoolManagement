@model IEnumerable<SchoolManagement.Models.Attendance>

    @{
    ViewData["Title"] = "Attendance Records";
    }

    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="display-5 text-info">Attendance Records 📋</h1>
            <p class="lead text-muted">Detailed history of student attendance by date and class.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-info btn-lg shadow-sm text-white">
                <i class="fas fa-calendar-plus me-2"></i> Record New Attendance
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Daily Attendance Log</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead>
                        <tr class="table-dark">
                            <th>
                                @Html.DisplayNameFor(model => model.Student)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClassRoom)
                            </th>
                            <th class="text-center">
                                Status
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                        <tr>
                            <td>
                                **@Html.DisplayFor(modelItem => item.Student.FullName)**
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassRoom.Name)
                            </td>
                            <td class="text-center">
                                @if (item.IsPresent)
                                {
                                <span class="badge bg-success text-white">Present</span>
                                }
                                else
                                {
                                <span class="badge bg-danger text-white">Absent</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit Record">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete Record">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            Total Records Displayed: **@Model.Count()**
        </div>
    </div>
