@model SchoolManagement.Models.ClassRoom

@{
    ViewData["Title"] = "Classroom Details";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-info text-white">
                <h3 class="text-center my-4">Classroom Details ℹ️</h3>
            </div>
            <div class="card-body p-4">
                <h4 class="mb-3 border-bottom pb-2">@Model.Name - @Model.Section</h4>

                <dl class="row mb-4">
                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-8 fw-bold">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.Section)
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.Section)</span>
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        Capacity / Enrollment
                    </dt>
                    <dd class="col-sm-8">
                        <span class="fst-italic text-secondary">
                            (Dynamic enrollment count here)
                        </span>
                    </dd>
                </dl>

                <hr />

                <div class="d-flex justify-content-start gap-2 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i> Edit Class
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>