@model SchoolManagement.Models.ClassRoom

@{
    ViewData["Title"] = "Edit Class";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-warning text-dark">
                <h3 class="text-center my-4">Edit Classroom Details ✏️</h3>
            </div>
            <div class="card-body">
                <h4 class="mb-3">Update Class Information</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Section" class="form-label fw-bold"></label>
                        <input asp-for="Section" class="form-control form-control-lg" />
                        <span asp-validation-for="Section" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" value="Save" class="btn btn-warning btn-lg text-dark">
                            <i class="fas fa-edit me-2"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="text-warning fw-bold">← Back to Class List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}