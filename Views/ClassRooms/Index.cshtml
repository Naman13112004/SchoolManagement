@model IEnumerable<SchoolManagement.Models.ClassRoom>

    @{
    ViewData["Title"] = "Classroom Management";
    }

    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="display-5 text-primary">Classroom Directory 📚</h1>
            <p class="lead text-muted">Manage the listing of all academic classes and their sections.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus-square me-2"></i> Create New Class
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Active Class List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead>
                        <tr class="table-dark">
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Section)
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                        <tr>
                            <td>
                                <i class="fas fa-chalkboard me-2 text-primary"></i>
                                **@Html.DisplayFor(modelItem => item.Name)**
                            </td>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Section)</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit Class">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete Class">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            Total Classrooms: **@Model.Count()**
        </div>
    </div>
