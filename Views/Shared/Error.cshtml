@model ErrorViewModel
@{
    ViewData["Title"] = "System Error";
}

<div class="text-center py-5">
    <h1 class="display-1 text-danger">⚠️ 500</h1>
    <h2 class="text-danger mb-4">System Error. An unexpected problem occurred.</h2>

    <p class="lead">
        We're sorry, but the application encountered an error while processing your request. Our administrators have been notified.
    </p>

    <div class="my-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-3">Go to Dashboard</a>
        <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">Go Back</button>
    </div>

    @if (Model.ShowRequestId)
    {
    <div class="card bg-light p-3 mt-5 mx-auto" style="max-width: 600px;">
        <p class="mb-1 text-start">
            <strong>Reference ID:</strong>
        </p>
        <code class="text-break text-start d-block p-2 bg-white border rounded">@Model.RequestId</code>
        <small class="text-muted mt-2 text-start">Please quote this ID if you contact support.</small>
    </div>
    }

    <div class="mt-5 p-3 border-start border-warning border-5 text-start mx-auto" style="max-width: 600px;">
        <h3 class="text-warning">Development Mode Warning</h3>
        <p class="small text-muted mb-0">
            Swapping to the **Development** environment will display more detailed information about the error that occurred. **This should not be enabled for deployed applications.**
        </p>
    </div>
</div>