@model SchoolManagement.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-info text-white">
                <h3 class="text-center my-4">Student Profile 👤</h3>
            </div>
            <div class="card-body p-4">
                <h4 class="mb-3 border-bottom pb-2">@Model.FullName</h4>

                <dl class="row mb-4">
                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>
                    <dd class="col-sm-8 fw-bold">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.RollNumber)
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.RollNumber)</span>
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DateOfBirth)
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.ClassRoom)
                    </dt>
                    <dd class="col-sm-8">
                        <span class="fw-bold">@Html.DisplayFor(model => model.ClassRoom.Name)</span>
                    </dd>
                </dl>

                <hr />

                <div class="d-flex justify-content-start gap-2 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i> Edit Record
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>