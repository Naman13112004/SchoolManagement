@model SchoolManagement.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-warning text-dark">
                <h3 class="text-center my-4">Edit Student Record ✏️</h3>
            </div>
            <div class="card-body">
                <h4 class="mb-3">Update Student Information</h4>
                <hr />
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control form-control-lg" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                            <input asp-for="DateOfBirth" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RollNumber" class="form-label fw-bold"></label>
                            <input asp-for="RollNumber" class="form-control form-control-lg" />
                            <span asp-validation-for="RollNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ClassRoomId" class="form-label fw-bold">Assign Class</label>
                            <select asp-for="ClassRoomId" class="form-select form-select-lg" asp-items="ViewBag.ClassRoomId"></select>
                            <span asp-validation-for="ClassRoomId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" value="Save" class="btn btn-warning btn-lg text-dark">
                            <i class="fas fa-edit me-2"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="text-warning fw-bold">← Back to Student List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}