@model SchoolManagement.Models.Subject

@{
    ViewData["Title"] = "Create New Subject";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-primary text-white">
                <h3 class="text-center my-4">Create New Subject ➕</h3>
            </div>
            <div class="card-body">
                <h4 class="mb-3">Subject Details</h4>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g., Advanced Calculus" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="TeacherId" class="form-label fw-bold">Assign Head Teacher</label>
                        <select asp-for="TeacherId" class="form-select form-select-lg" asp-items="ViewBag.TeacherId">
                            <option value="">-- Select Teacher --</option>
                        </select>
                        <span asp-validation-for="TeacherId" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i> Save Subject
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="text-primary fw-bold">← Back to Subject Catalog</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}