@model SchoolManagement.Models.Teacher

@{
    ViewData["Title"] = "Register New Teacher";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-success text-white">
                <h3 class="text-center my-4">Teacher Registration ➕</h3>
            </div>
            <div class="card-body">
                <h4 class="mb-3">Personal Details</h4>
                <hr />
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold"></label>
                        <input asp-for="FullName" class="form-control form-control-lg" placeholder="e.g., Prof. Alan Turing" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="EmployeeNumber" class="form-label fw-bold"></label>
                        <input asp-for="EmployeeNumber" class="form-control form-control-lg" placeholder="e.g., TCH-10025" />
                        <span asp-validation-for="EmployeeNumber" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save me-2"></i> Create Teacher Record
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="text-success fw-bold">← Back to Teacher List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}