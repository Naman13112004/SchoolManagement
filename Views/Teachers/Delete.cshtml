                                <dt class="col-sm-4 text-muted">
                                    @Html.DisplayNameFor(model => model.FullName)
                                </dt>
                                <dd class="col-sm-8 fw-bold text-danger">
                                    @Html.DisplayFor(model => model.FullName)
                                </dd>

                                <dt class="col-sm-4 text-muted">
                                    @Html.DisplayNameFor(model => model.EmployeeNumber)
                                </dt>
