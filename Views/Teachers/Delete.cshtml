    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
            @model SchoolManagement.Models.Teacher

            @{
    ViewData["Title"] = "Delete Teacher";
            }

            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card shadow-lg border-danger rounded-lg mt-5">
                        <div class="card-header bg-danger text-white">
                            <h3 class="text-center my-4">Delete Confirmation 🛑</h3>
                        </div>
                        <div class="card-body p-4">
                            <h3 class="text-danger mb-4">Are you sure you want to permanently delete this teacher's record?</h3>
