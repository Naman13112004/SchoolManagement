@model IEnumerable<SchoolManagement.Models.Teacher>

    @{
    ViewData["Title"] = "Teacher Directory";
    }

    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="display-5 text-success">Teacher Directory 👨‍🏫</h1>
            <p class="lead text-muted">Manage the records of all faculty members and staff.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
                <i class="fas fa-user-plus me-2"></i> Register New Teacher
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Current Faculty List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead>
                        <tr class="table-dark">
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmployeeNumber)
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                        <tr>
                            <td>
                                **@Html.DisplayFor(modelItem => item.FullName)**
                            </td>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.EmployeeNumber)</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit Teacher">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete Teacher">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            Total Faculty Members: **@Model.Count()**
        </div>
    </div>
